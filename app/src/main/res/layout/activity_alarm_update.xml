<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tony.myclock.AlarmUpdateActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Alarm"
        android:textSize="30dp"

        android:textColor="#669900"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed" />

    <TimePicker
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_timePicker"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:timePickerMode="spinner"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:id="@+id/update_alarm_label_tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Label"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/update_alarm_et"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please enter your note"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/update_switch_name1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Vibrate when alarm sounds"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:gravity="center|start"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/update_switch_one"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:button="@drawable/switch_btn"
            android:background="@android:color/transparent"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/update_switch_name2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Delete after goes off"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:gravity="center|start"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/update_switch_two"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:button="@drawable/switch_btn"
            android:background="@android:color/transparent"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/update_ringtone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/update_ring_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/update_ringtone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:gravity="center|start"
                android:text="Ringtone"
                />

            <TextView
                android:id="@+id/update_ring_selected_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:gravity="center|start"
                android:text="None"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigate_next_black_36dp"
            android:background="@android:color/transparent"

            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_alignBottom="@+id/update_ring_text_layout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/update_confirm_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="#669900"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"

        />

</LinearLayout>
